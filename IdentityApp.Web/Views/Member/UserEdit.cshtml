@model UserEditViwModel
@{
    ViewData["Title"] = "UserEdit";
}



@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1 class="text-center">Kullanıcı Bilgileri Güncelleme Sayfası</h1>
        @if (TempData["SuccessMessage"] is not null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>

        <form asp-controller="Member" asp-action="UserEdit" method="post" enctype="multipart/from-data">

            <div class="row mb-3">
                <label for="UserName" class="col-md-4 col-form-label" asp-for="UserName"></label>
                <div class="col-md-8">
                    <input asp-for="UserName"  class="form-control" >
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Email" class="col-md-4 col-form-label" asp-for="Email"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Email" class="col-md-4 col-form-label" asp-for="Email"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Phone" class="col-md-4 col-form-label" asp-for="Phone"></label>
                <div class="col-md-8">
                    <input asp-for="Phone" class="form-control">
                    <span class="text-danger" asp-validation-for="Phone"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="City" class="col-md-4 col-form-label" asp-for="City"></label>
                <div class="col-md-8">
                    <input asp-for="City" class="form-control">
                    <span class="text-danger" asp-validation-for="City"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="BirthDay" class="col-md-4 col-form-label" asp-for="BirthDay"></label>
                <div class="col-md-8">
                    <input asp-for="BirthDay" class="form-control">
                    <span class="text-danger" asp-validation-for="BirthDay"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Gender" class="col-md-4 col-form-label" asp-for="Gender"></label>
                <div class="col-md-8">
                    <select class="form-control" asp-for="Gender" asp-items="ViewBag.GenderList">
                        <option value="">Cinsiyet Seçiniz</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Gender"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Picture" class="col-md-4 col-form-label" asp-for="Picture"></label>
                <div class="col-md-8">
                    <input type="file" asp-for="Picture" class="form-control" />
                    <span class="text-danger" asp-validation-for="Picture"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-8 offset-md-4 text-center">
                    <button type="submit" class="btn btn-outline-success w-75">Güncelle</button>
                </div>
            </div>
        </form>
    </div>
</div>

