@model PasswordChangeViewModel
@{
    ViewData["Title"] = "ParwordChange";
}


@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1 class="text-center">Şifre değiştirme Ekranı</h1>
        @if (TempData["SuccessMessage"] is not null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
        </div>

        <form method="post">

            <div class="row mb-3">
                <label for="PasswordOld" class="col-md-4 col-form-label" asp-for="PasswordOld"></label>
                <div class="col-md-8">
                    <input asp-for="PasswordOld" type="password" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordOld"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="PasswordNew" class="col-md-4 col-form-label" asp-for="PasswordNew"></label>
                <div class="col-md-8">
                    <input asp-for="PasswordNew" type="password" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordNew"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="PasswordNewConfirm" class="col-md-4 col-form-label" asp-for="PasswordNewConfirm"></label>
                <div class="col-md-8">
                    <input asp-for="PasswordNewConfirm" type="password" class="form-control">
                    <span class="text-danger" asp-validation-for="PasswordNewConfirm"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-8 offset-md-4 text-center">
                    <button type="submit" class="btn btn-outline-success w-75 ">Şifre Değiştir</button>
                </div>
            </div>
        </form>
    </div>
</div>


