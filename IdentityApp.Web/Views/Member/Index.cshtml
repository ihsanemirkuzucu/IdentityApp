@model UserViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Kullanıcı Bilgileri</h1>

<div class="row">
    <div class="col-md-4 offset-md-4 text-center">
        <user-picture class="rounded" style="width:300px" pictre-url="@Model.PictureUrl"></user-picture> @* Tag Helper *@
    </div>
</div>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-info">
            <thead>
            <tr>
                <th>Kullanıcı Adı</th>
                <th>Email</th>
                <th>Telefon Numarası</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>@Model.UserName</td>
                <td>@Model.Email</td>
                <td>@Model.Phone</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
