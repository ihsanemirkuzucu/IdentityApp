@model RoleCreateViewModel

@{
    ViewData["Title"] = "RoleAdd";
}



<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2 class="text-center">Role Oluşturma</h2>
        <form asp-action="RoleAdd" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Oluştur" class="btn btn-primary"/>
            </div>
        </form>
        <div class="d-flex justify-content-center">
            <a class="btn btn-outline-info w-50 " asp-action="Index">Role Listesine geri dön</a>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
