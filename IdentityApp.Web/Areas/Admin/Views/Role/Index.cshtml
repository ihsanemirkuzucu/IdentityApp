@model List<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Roller</h1>

<div class="row">
    @if (TempData["SuccessMessage"] is not null)
    {
        <div class="alert alert-info" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="col-md-8 offset-md-2">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Rol Adı</th>
                <th class="text-center">İşlemler</th>

            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td class="d-flex justify-content-center gap-2">
                        <a class="btn btn-outline-warning btn-sm" asp-area="Admin" asp-controller="Role" asp-action="RoleUpdate" asp-route-id="@item.Id">Güncelle</a>
                            <a class="btn btn-outline-danger btn-sm" asp-area="Admin" asp-controller="Role" asp-action="RoleDelete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
<div class="col-md-8 offset-md-2 d-flex justify-content-end">
    <a class="btn btn-outline-primary " asp-area="Admin" asp-controller="Role" asp-action="RoleAdd">Rol Ekle</a>
</div>
